<script>
    $(document).ready(function() {
        $('#success-alert').fadeOut(5000);
        $('#error-alert').fadeOut(5000);
    });
</script>
{% block stylesheets %}
    <style>
        .custom-alert {
            font-size: 14px; 
            padding: 8px 15px; 
            border-radius: 5px; 
            margin: 0 auto; 
            width: fit-content;
            position: fixed;
            top: 50%; 
            left: 50%; 
            transform: translate(-50%, -50%);
            z-index: 9999;
        }

        .alert-success {
            background-color: #d4edda; 
            border-color: #c3e6cb; 
            color: #155724; 
        }

        .alert-warning {
            background-color: #f8d7da;
            border-color: #f5c6cb; 
            color: #721c24; 
        }
    </style>
    {% endblock %}
{% for message in app.flashes("success") %}
<div class="alert alert-success custom-alert text-smaller text-center" id="success-alert">
    <i class="fas fa-check-circle"></i>
    <span>{{ message }}</span>
</div>
{% endfor %}
