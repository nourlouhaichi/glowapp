<script>
    $(document).ready(function () {
        $('#example-search-input').on('keyup', function () {
            var searchQuery = $(this).val().toLowerCase();
            $('.col-md-4.position-relative').each(function () {
                var publicationTitle = $(this).find('h4').text().toLowerCase();
                $(this).toggle(publicationTitle.includes(searchQuery));
            });
        });
    });
</script>
