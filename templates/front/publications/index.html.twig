{% for message in app.flashes("success") %}
<div class="alert alert-success custom-alert text-smaller text-center" id="success-alert">
    <i class="fas fa-check-circle"></i>
    <span>{{ message }}</span>
</div>
{% endfor %}

{% for message in app.flashes("error") %}
<div class="alert alert-warning custom-alert text-smaller text-center" id="error-alert">
    <i class="fas fa-exclamation-circle"></i>
    <span>{{ message }}</span>
</div>
{% endfor %}

<div class="tab-content">
    {% set itemCount = publications|length %}
    {% for pub in publications %}
        
        {% if loop.index0 % 3 == 0 %}
        <br>
            <div class="row g-4">
        {% endif %}
        
        <div class="col-md-4 position-relative">
            <div class="item-container" style="height: 500px; position: relative;"> 
                <div id="carouselExampleControls_{{ pub.id }}" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        {% set isFirst = true %}
                        {% for image in pub.images %}
                            <div class="carousel-item {% if isFirst %}active{% endif %}">
                                <img src="{{ asset('/images/publications/' ~ image.name) }}" class="d-block w-100" style="height: 300px; object-fit: cover;" alt="Publication Image">
                            </div>
                            {% set isFirst = false %}
                        {% endfor %}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls_{{ pub.id }}" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls_{{ pub.id }}" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">{{ pub.getTypeP() }}</div>
                
                
                <div class="p-4 border border-secondary border-top-0 rounded-bottom" style="height: 200px; overflow: hidden;">
                    <div style="position: absolute; top: 10px; right: 10px;">
                        <a href="{{ path('app_publication_edit', {'id': pub.id}) }}" class="text-white px-1 py-1 rounded"><i class="fas fa-pencil-alt me-2 text-primary"></i></a>
                        <form method="post" action="{{ path('app_publicationcomdelete', {'id': pub.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pub.id) }}">
                            <button class="text-white px-1 py-1 rounded" style="background-color: transparent; border: none;"><i class="fas fa-trash me-2 text-primary"></i></button>
                        </form>
                    </div>
                    <h4>{{ pub.getTitreP() }}</h4>
                    <p>{{ pub.getContenueP()|slice(0, 100) }}</p>
                    <div class="d-flex justify-content-between flex-lg-wrap">
                        <a href="{{ path('app_publication_show', {'id': pub.id}) }}" class="btn border border-secondary rounded-pill px-3 text-primary"><i class="fas fa-eye me-2 text-primary"></i>Read more</a>
                        <a href="#"><i class="fas fa-comment me-2 text-primary"></i>{{ pub.comments|length }}</a>
                    </div>
                </div>
            </div>
        </div>
        
        {% if loop.index0 % 3 == 2 or loop.last %}
            </div> 
        {% endif %}
    {% endfor %}
     
</div>

