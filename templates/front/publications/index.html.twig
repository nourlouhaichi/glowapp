    $(document).ready(function() {
        $('#success-alert').fadeOut(5000);
        $('#error-alert').fadeOut(5000);
    });
</script>
{% block stylesheets %}
<style>
    /* Enhanced Search Bar */
    .search-bar-container {
        width: 50%;
        margin: 1rem auto;
        display: flex;
        border: 2px solid #81C408; /* Primary color based on logo */
        border-radius: 30px; /* Rounded corners */
        overflow: hidden; /* Ensures inner elements conform to border radius */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
    }

    .search-bar-container input {
        flex-grow: 1;
        border: none;
        padding: 10px 20px;
        font-size: 16px; /* Larger font size for readability */
    }

    .search-bar-container button {
        background-color: #81C408; /* Matching primary color */
        border: none;
        color: white;
        padding: 10px;
        cursor: pointer; /* Hand cursor on hover */
    }

    /* "Add New Post" Button Enhancement */
    .add-new-post-btn {
        background-color: #81C408; /* Green color for visibility */
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px; /* Slightly rounded edges */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Consistent with search bar */
        transition: all 0.3s ease;
        text-transform: uppercase; /* Aesthetic choice for button text */
        font-weight: bold;
        margin-left: 15px; /* Space from the edge */
        display: block; /* To enable margin auto to center */
        margin-top: 20px;
        margin-bottom: 20px;
        margin-right: auto;
        margin-left: auto;
    }

    .add-new-post-btn:hover {
        background-color: #218838; /* Darker shade on hover */
        transform: translateY(-2px); /* Slight raise on hover */
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15); /* Larger shadow on hover */
    }
</style>
    <style>
        .custom-alert {
            font-size: 14px; 
            padding: 8px 15px; 
            border-radius: 5px; 
            margin: 0 auto; 
            width: fit-content;
            position: fixed;
            top: 50%; 
            left: 50%; 
            transform: translate(-50%, -50%);
            z-index: 9999;
        }

        .alert-success {
            background-color: #d4edda; 
            border-color: #c3e6cb; 
            color: #155724; 
        }

        .alert-warning {
            background-color: #f8d7da;
            border-color: #f5c6cb; 
            color: #721c24; 
        }
    </style>
{% endblock %}
