{% extends 'back/backbase.html.twig' %}

{% block body %}
<div class="container-fluid vesitable py-5 bg-light rounded h-100 p-4">
    <div class="container py-5">
        <h1 class="regular_anta">All Reservations</h1>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Prog</th>
                        <th>Nombre de place</th>
                        <th>Prix Total</th>
                        <th>Image de l'événement reservé</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for l in reservations %}
                    <tr>
                        <td>{{ l.idprog.titrePro }}</td>
                        <td>{{ l.nbrplace }}</td>
                        <td>{{ l.idprog.prix * l.nbrplace }} DT</td>
                        <td><img src="{{ asset('Uploads/Image/' ~ l.idprog.image) }}" height="50" width="50" class="img-lg"></td>
                        {% if l.approuve == 1 %}
                        <td style="background-color: #0b2e13">Approved</td>
                        {% elseif l.approuve == 0 %}
                        <td>
                            <label class="badge badge-light">
                                <a href="{{ url('approuverReservation', {'id': l.id}) }}">Approve</a>
                            </label>
                        </td>
                        {% endif %}
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="5">No reservations found</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
