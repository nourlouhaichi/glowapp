{% extends 'back/backbase.html.twig' %}

{% block title %}CategorieProd index{% endblock %}

{% block body %}
    <div class="container-fluid pt-4 px-4">  
        <center><h1 class="mb-3 text-warning">Category Table</h1></center>
        <div class="container d-flex justify-content-end">
            <a class="btn btn-success rounded-pill m-2" href="{{ path('app_categorie_prod_new') }}"><i class="fa fa-plus"></i></a>
        </div>
        <div class="container-fluid pt-4 px-4">                  
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Create Date</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for categorie_prod in categorie_prods %}
                        <tr>
                            <th scope="row">{{ categorie_prod.id }}</th>
                            <td>{{ categorie_prod.nomCa }}</td>
                            <td>{{ categorie_prod.descriptionCat }}</td>
                            <td>{{ categorie_prod.CreateDateCa ? categorie_prod.CreateDateCa|date('Y-m-d') : '' }}</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Category Actions">
                                    <a class="btn btn-primary rounded-pill m-2"  href="{{ path('app_categorie_prod_show', {'id': categorie_prod.id}) }}"><i class="fa fa-eye"></i></a>
                                    <a class="btn btn-warning rounded-pill m-2"href="{{ path('app_categorie_prod_edit', {'id': categorie_prod.id}) }}"><i class="fa fa-pen"></i></a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}














