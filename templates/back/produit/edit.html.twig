{% extends 'back/backbase.html.twig' %}

{% block title %}Edit Produit{% endblock %}

{% block body %}
    <h1>Edit Produit</h1>

    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-sm-12 col-xl-6">
                <div class="bg-light rounded h-100 p-4">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="form-floating mb-3">
                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'id': 'floatingInput', 'placeholder': 'Name Product'}}) }}
                        <label for="floatingInput">Name Product</label>
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="form-floating mb-3">
                        {# Render description as textarea for editing #}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'id': 'floatingTextarea', 'placeholder': 'Describe the product here', 'style': 'height: 150px'}}) }}
                        <label for="floatingTextarea">Description</label>
                        {{ form_errors(form.description) }}
                    </div>

                    <div class="form-floating mb-3">
                        <div class="input-group">
                            <span class="input-group-text">TND</span>
                            {{ form_widget(form.price, {'attr': {'class': 'form-control', 'aria-label': 'Amount (to the nearest dollar)'}}) }}
                            <span class="input-group-text">.00</span>
                        </div>
                        <label for="floatingInput"></label>
                        {{ form_errors(form.price) }}
                    </div>

                    <div class="form-floating mb-3">
                        {{ form_widget(form.image, {'attr': {'class': 'form-select', 'id': 'genderSelect'}}) }}
                        <label for="floatingInput">Image</label>
                        {{ form_errors(form.image) }}
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-xl-6">
                <div class="bg-light rounded h-100 p-4">
                    <div class="form-floating mb-3">
                        {{ form_widget(form.quantity, {'attr': {'class': 'form-select', 'id': 'dateOfBirth'}}) }}
                        <label for="floatingInput">Quantity of Produit</label>
                        {{ form_errors(form.quantity) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <a class="btn btn-warning rounded-pill m-2" href="{{ path('app_produit_index') }}">Back to list</a>
        <button type="submit" class="btn btn-success rounded-pill m-2">Edit</button>
    </div>

    {{ form_end(form) }}

{% endblock %}

